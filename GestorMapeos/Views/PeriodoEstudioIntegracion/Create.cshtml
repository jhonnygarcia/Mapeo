@using GestorMapeos.CustomHelpers;
@using GestorMapeos.Globalization.Views
@{
    ViewBag.Title = PeriodoEstudioIntegracionStrings.LabelTituloPaginaAdicion;
    ViewBag.TitlePage = PeriodoEstudioIntegracionStrings.LabelTituloPaginaAdicion;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script type="text/javascript" src="@Url.ContentNoCache("~/Globalization/Scripts/PeriodoEstudioIntegracionStrings.js")"></script>
    <script type="text/javascript" src="@Url.ContentNoCache("~/Scripts/pages/PeriodoEstudioIntegracion/Create.js")"></script>

}
<div id="page-periodo-estudio-crear">
    <input type="hidden" id="hd-id-periodo-estudio"/>
    <input type="hidden" id="hd-id-plan-ofertado-erp" />
    <div class="box-fieldset">
        <span class="field-title">@PeriodoEstudioIntegracionStrings.LabelSeccionPeriodoEstudio</span>
        <div class="grid-100 mobile-grid-100">
            <ul class="box-form">
                <li>
                    <button id="btn-buscar-periodo-estudio" class="button">@PeriodoEstudioIntegracionStrings.BotonBuscarPeriodoEstudio</button>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelIdPeriodoEstudio</label>
                    <span id="lb-id-periodo-estudio" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelEstudio</label>
                    <span id="lb-estudio" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelPeriodoMatriculacion</label>
                    <span id="lb-periodo-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="box-fieldset">
        <span class="field-title">@PeriodoEstudioIntegracionStrings.LabelSeccionPlanOfertado</span>
        <div class="grid-100 mobile-grid-100">
            <ul class="box-form">
                <li>
                    <button id="btn-buscar-plan-ofertado" class="button">@PeriodoEstudioIntegracionStrings.BotonBuscarPlanOfertadoErp</button>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelIdPlanOfertadoErp</label>
                    <span id="lb-id-plan-ofertado-erp" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelPlanEstudioErp</label>
                    <span id="lb-plan-estudio-erp" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoEstudioIntegracionStrings.LabelPeriodoAcademicoErp</label>
                    <span id="lb-periodo-academico-erp" class="label grid-75 mobile-grid-100"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="box-buttons">
        <button id="btn-guardar" class="button">@CommonStrings.LabelGuardarSalir</button>
        <button id="btn-guardar-continuar" class="button">@CommonStrings.LabelGuardarContinuar</button>
        <button id="btn-cancelar" class="button">@CommonStrings.LabelCancelar</button>
    </div>
</div>