@using GestorMapeos.CustomHelpers;
@using GestorMapeos.Globalization.Views
@{
    ViewBag.Title = PeriodoMatriculacionIntegracionStrings.TitleListar;
    ViewBag.TitlePage = PeriodoMatriculacionIntegracionStrings.TitleListar;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script type="text/javascript" src="@Url.ContentNoCache("~/Globalization/Scripts/PeriodoMatriculacionIntegracionStrings.js")"></script>
    <script type="text/javascript" src="@Url.ContentNoCache("~/Scripts/pages/PeriodoMatriculacionIntegracion/List.js")"></script>
}
<div id="page-periodo-matriculacion-listar">
    <div class="box-fieldset">
        <span class="field-title">@CommonStrings.LabelFiltros</span>
        <div id="box-filters" class="clearfix">
            <div class="box-fieldset">
                <span class="field-title">@CommonStrings.LabelLeyendaGestorUnir2</span>
                <div class="grid-100 mobile-grid-100">
                    <ul class="box-form">
                        <li>
                            <label for="txt-id-periodo-matriculacion" class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelIdPeriodoMatriculacion</label>
                            <input id="txt-id-periodo-matriculacion" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <label for="cbx-periodo-matriculacion" class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelPeriodoMatriculacion</label>
                            <select id="cbx-periodo-matriculacion" class="grid-40 mobile-grid-100"></select>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-fieldset">
                <span class="field-title">@CommonStrings.LabelLeyendaERPAcademico2</span>
                <div class="grid-100 mobile-grid-100">
                    <ul class="box-form">
                        <li>
                            <label for="txt-id-periodo-academico" class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelIdPeriodoAcademico</label>
                            <input id="txt-id-periodo-academico" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <label for="cbx-periodo-academico" class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelPeriodoAcademico</label>
                            <select id="cbx-periodo-academico" class="grid-40 mobile-grid-100"></select>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="align-right">
            <button class="button" id="btn-buscar">@CommonStrings.LabelBuscar</button>
            <button class="button" id="btn-limpiar">@CommonStrings.LabelLimpiar</button>
        </div>
    </div>
    <div class="box-fieldset">
        <span class="field-title">@CommonStrings.LabelResultados</span>
        <div class="box-buttons">
            <button class="button" id="btn-crear">@CommonStrings.LabelCrear</button>
            <button class="button" id="btn-eliminar">@CommonStrings.LabelEliminar</button>
        </div>
        <table id="tb-periodo-matriculacion-integracion" class="display"></table>
    </div>
    @Html.Partial("_LeyendaConGestor")
</div>