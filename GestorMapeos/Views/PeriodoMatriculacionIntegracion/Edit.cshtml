@using GestorMapeos.CustomHelpers;
@using GestorMapeos.Globalization.Views
@{
    ViewBag.Title = PeriodoMatriculacionIntegracionStrings.TitleEditar;
    ViewBag.TitlePage = PeriodoMatriculacionIntegracionStrings.TitleEditar;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script type="text/javascript" src="@Url.ContentNoCache("~/Globalization/Scripts/PeriodoMatriculacionIntegracionStrings.js")"></script>
    <script type="text/javascript" src="@Url.ContentNoCache("~/Scripts/pages/PeriodoMatriculacionIntegracion/Edit.js")"></script>
}
<div id="page-periodo-matriculacion-editar">
    <input type="hidden" id="hd-id-periodo-matriculacion" value="@ViewBag.Id" />
    <div class="box-fieldset">
        <span class="field-title">@PeriodoMatriculacionIntegracionStrings.GrupoPeriodoMatriculacion</span>
        <div class="grid-100 mobile-grid-100">
            <ul class="box-form">
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelPeriodoMatriculacion</label>
                    <span id="lb-periodo-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@CommonStrings.LabelId</label>
                    <span id="lb-id-periodo-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelAñoAcademico</label>
                    <span id="lb-anyo-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelFechaInicio</label>
                    <span id="lb-fecha-inicio-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelFechaFin</label>
                    <span id="lb-fecha-fin-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelNro</label>
                    <span id="lb-nro-matriculacion" class="label grid-75 mobile-grid-100"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="box-fieldset">
        <span class="field-title">@PeriodoMatriculacionIntegracionStrings.GrupoPeriodoAcademico</span>
        <div class="grid-100 mobile-grid-100">
            <ul class="box-form">
                <li>
                    <label for="cbx-periodo-academico" class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelPeriodoAcademico @CommonStrings.RequiredSymbol</label>
                    <select id="cbx-periodo-academico" class="grid-40 mobile-grid-100"></select>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@CommonStrings.LabelId</label>
                    <span id="lb-id-periodo-academico" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelAñoAcademico</label>
                    <span id="lb-anyo-academico" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelFechaInicio</label>
                    <span id="lb-fecha-inicio-academico" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelFechaFin</label>
                    <span id="lb-fecha-fin-academico" class="label grid-75 mobile-grid-100"></span>
                </li>
                <li>
                    <label class="grid-15 mobile-grid-100">@PeriodoMatriculacionIntegracionStrings.LabelNro</label>
                    <span id="lb-nro-academico" class="label grid-75 mobile-grid-100"></span>
                </li>
            </ul>
        </div>
    </div>
    <div class="box-buttons">
        <button id="btn-guardar" class="button">@CommonStrings.LabelGuardar</button>
        <button id="btn-cancelar" class="button">@CommonStrings.LabelCancelar</button>
    </div>
</div>
