@using GestorMapeos.CustomHelpers;
@using GestorMapeos.Globalization.Views;
@{
    ViewBag.Title = PlantillaAsignaturaIntegracionStrings.LabelTituloPaginaListado;
    ViewBag.TitlePage = PlantillaAsignaturaIntegracionStrings.LabelTituloPaginaListado;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script type="text/javascript" src="@Url.ContentNoCache("~/Globalization/Scripts/PlantillaAsignaturaIntegracionStrings.js")"></script>
    <script type="text/javascript" src="@Url.ContentNoCache("~/Scripts/pages/PlantillaAsignaturaIntegracion/List.js")"></script>
}
<div id="page-asignatura-plan-listar">
    <div class="box-fieldset">
        <span class="field-title">@CommonStrings.LabelFiltros</span>
        <div id="box-filters" class="clearfix">
            <div class="box-fieldset">
                <span class="field-title">@CommonStrings.LabelLeyendaGestionExpedientes</span>
                <div class="grid-100 mobile-grid-100">
                    <ul class="box-form">
                        <li>
                            <label for="txt-id-plantilla-asignatura" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelIdPlantillaAsignatura</label>
                            <input id="txt-id-plantilla-asignatura" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <label for="txt-id-plantilla-estudio" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelIdPlantillaEstudio</label>
                            <input id="txt-id-plantilla-estudio" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <div class="grid-100 mobile-grid-100">
                                <div class="box-fieldset-agrupador">
                                    <ul class="box-form">
                                        <li>
                                            <label for="cbx-plantilla-estudio" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelPlantillaEstudio</label>
                                            <select id="cbx-plantilla-estudio" class="grid-40 mobile-grid-100"></select>
                                        </li>
                                        <li>
                                            <label for="cbx-plantilla-asignatura" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelPlantillaAsignatura</label>
                                            <select id="cbx-plantilla-asignatura" class="grid-40 mobile-grid-100"></select>
                                            &nbsp;&nbsp;&nbsp;&nbsp;
                                            <label id="lb-codigo-plantilla-asignatura" class="italic"></label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-fieldset">
                <span class="field-title">@CommonStrings.LabelLeyendaERPAcademico2</span>
                <div class="grid-100 mobile-grid-100">
                    <ul class="box-form">
                        <li>
                            <label for="txt-id-asignatura-plan-erp" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelIdAsignaturaPlanErp</label>
                            <input id="txt-id-asignatura-plan-erp" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <label for="txt-id-plan-estudio-erp" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelIdPlanEstudioErp</label>
                            <input id="txt-id-plan-estudio-erp" class="grid-15 mobile-grid-100" type="text" />
                        </li>
                        <li>
                            <div class="grid-100 mobile-grid-100">
                                <div class="box-fieldset-agrupador">
                                    <ul class="box-form">
                                        <li>
                                            <label for="cbx-plan-estudio-erp" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelPlanEstudioErp</label>
                                            <select id="cbx-plan-estudio-erp" class="grid-40 mobile-grid-100"></select>
                                        </li>
                                        <li>
                                            <label for="cbx-asignatura-plan-erp" class="grid-15 mobile-grid-100">@PlantillaAsignaturaIntegracionStrings.LabelAsignaturaPlanErp</label>
                                            <select id="cbx-asignatura-plan-erp" class="grid-40 mobile-grid-100"></select>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="align-right">
            <button class="button" id="btn-buscar">@CommonStrings.LabelBuscar</button>
            <button class="button" id="btn-limpiar">@CommonStrings.LabelLimpiar</button>
        </div>
    </div>
    <div class="box-fieldset">
        <span class="field-title">@CommonStrings.LabelResultados</span>
        <div class="box-buttons">
            <button class="button" id="btn-crear">@CommonStrings.LabelCrear</button>
            <button class="button" id="btn-eliminar">@CommonStrings.LabelEliminar</button>
        </div>
        <table id="tb-asignatura-plan-integracion" class="display"></table>
    </div>
    @Html.Partial("_LeyendaConExpedientes")
</div>

